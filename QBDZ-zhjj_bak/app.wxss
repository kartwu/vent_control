/**app.wxss**/
page {
  background-color: #f8f8f8;
} 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  border-top:1px solid #e5e5e5;
} 
/* */
.view-header {
  display: flex;
  flex-direction: row;
  font-weight:bold;
  align-items: left;
  width: 40%;
  padding: 10rpx;
  border-bottom:1px solid #e5e5e5;
}
.view-subheader {
  background-color:rgb(24, 141, 24);
  color: #f8f8f8;
  text-align: center;
  font-weight:bold;
}
.view-button{
  display: flex;
  flex-direction: row;
  width: 45%;
  font-weight: bold;
}

.view-flex-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 6rpx;
}
.view-flex-subrow {
  display: flex;
  flex-direction: row;
  width: 50%;
  margin: 6rpx;
  text-align: right;
}



